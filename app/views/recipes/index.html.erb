<!-- The parent component -->
<div class="curtain">

  <!-- The component wrapper -->
  <div class="curtain__wrapper">

     <!-- The checkbox hack! -->
    <input type="checkbox" checked>

    <!-- The left curtain panel -->
    <div class="curtain__panel curtain__panel--left">
      <div class="small-button_1">
      <%= image_tag "white_logo", height: 40 %>
    </div>
    <div class="small-button_2">
      <%= image_tag "white_logo", height: 60 %>
    </div>
    <div class="small-button_3">
      <%= image_tag "white_logo", height: 50 %>
    </div>

    </div> <!-- curtain__panel -->
      <div class="curtain__prize">
        <div class="container">
          <h1>Recipe of the day!</h1>
          <div class="recipe-row">
            <div class="box-recipe-image">
              <%= image_tag @recipe.photo, class: 'recipe-image' %>
            </div>
            <div class="box-recipe-info">
              <h1 id='recipe-title'><%= @recipe.name %></h1>
              <div class="recipe-info-details">
                <p><i class="far fa-clock"></i> <%= @recipe.time %> </p>
                <p><i class="fas fa-weight"></i> <%= @recipe.calories %> kcal</p>
                <p><i class="far fa-thumbs-up"></i> <%= @recipe.difficulty %></p>
              </div>
              <h4>Description</h4>
              <p><%= @recipe.description %></p>
              <h4>Ingredients</h4>
              <div class="recipe-ingredients">
                <ul class="list-inline">
                  <% @recipe.measurements.each do |measurement| %>
                  <li> <%= measurement.ingredient.name %> <%= measurement.value %> <%= measurement.ingredient.unit %></li>
                  <% end %>
                </ul>
              </div>
        <!-- Insert code here from doc! -->
            </div>
          </div>
            <div class="recipe-row">
            <div id="cooking-steps">

            </div>
          </div>
        </div>
      </div> <!-- curtain__prize -->
<!-- The right curtain panel -->
    <div class="curtain__panel curtain__panel--right">
    <div id="reveal-button">
      Click me!
    </div>
    <div class="small-button_1">
      <%= image_tag "white_logo", height: 60 %>
    </div>
    <div class="small-button_2">
      <%= image_tag "white_logo", height: 80 %>
    </div>
    <div class="small-button_3">
      <%= image_tag "white_logo", height: 70 %>
    </div>
    <div class="small-button_4">
      <%= image_tag "white_logo", height: 110 %>
    </div>
    <div class="small-button_5">
      <%= image_tag "white_logo", height: 50 %>
    </div>
    <div class="small-button_6">
      <%= image_tag "white_logo", height: 70 %>
    </div>
    </div>

    </div> <!-- curtain__panel -->

  </div> <!-- curtain__wrapper -->

</div> <!-- curtain -->

