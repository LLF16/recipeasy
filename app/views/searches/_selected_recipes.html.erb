  <div class="row">
    <% @selected_recipes.each do |recipe| %>
    <div class="col-xs-12 col-md-4">
      <div class="card-recipe">
        <div class="recipe-tag-section">
          <% if recipe == @selected_recipes.sort_by{|recipe| recipe[:time]}.first%>
            <div class="recipe-tag tag-time">â°</div>
          <% end %>
          <% if recipe == @selected_recipes.sort_by{|recipe| recipe[:calories]}.last %>
            <div class="recipe-tag tag-calories">ğŸ©</div>
          <% end %>
          <% if recipe == @selected_recipes.shuffle.first && @selected_recipes.length > 1%>
            <div class="recipe-tag tag-diego">ğŸ‘¨â€ğŸ³</div>
          <% end %>
        </div>
         <div class="selected-recipes-facts">
          <div class="content-recipes-facts">
            <p class="selected-recipe-title">Time</p>
            <h4><%= recipe.time %> min.</h4>
          </div>
          <div class="content-recipes-facts">
            <p class="selected-recipe-title">Calories</p>
            <h4><%= recipe.calories %> kcal</h4>
          </div>
          <div class="content-recipes-facts">
            <p class="selected-recipe-title">Serves</p>
            <h4><%= recipe.serves %> people</h4>
          </div>
        </div>
        <div class="image" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.4)), url(<%= recipe.photo %>)"></div>
        <div class="card-description">
          <div>
            <p class="selected-recipe-title">Recipe</p>
            <h4><%= recipe.name %></h4>
          </div>
        </div>

        <%= link_to "", recipe_path(recipe), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>



