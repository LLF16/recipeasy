<div class="container">
  <div class="row">
    <h1><%= @recipe.name %></h1>
    <%= link_to 'Back to my profile', profile_path(current_user), class: 'btn btn-primary'  %>
    <% @recipe.steps.each do |step, description| %>
      <div class="step-card">
        <h2>Step: <%= step %></h2>
        <p><%= description %></p>
      </div>
    <% end %>
    <%= link_to "", profile_path(current_user), class: "fas fa-backward" %>
  </div>
</div>
