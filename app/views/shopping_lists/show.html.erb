<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="sl-ingredients-list">
        <h2> Your shopping list </h2>
        <ul>
          <% @shopping_list.ingredients.each do |ingredient| %>
            <li>
              <%= ingredient.name %> |
              <%= ingredient.total_amount_in_shopping_list(@shopping_list) %>
              <%= ingredient.unit %> |
              <%= ingredient.total_price_in_shopping_list(@shopping_list) %> €
            </li>
          <% end %>
        </ul>
      </div>
      <p>
        Total = <%= @shopping_list.total_price %> €
      </p>
    </div>

    <div class="col-xs-12 col-md-6">
      <h2> The recipes </h2>
      <ul>
        <% @shopping_list.recipes.each do |recipe| %>
          <li>
            <div class="shopping-list-recipe-card">
              <%= image_tag recipe.photo %>
              <%= recipe.name %>
              <%= link_to "remove all", shopping_list_recipe_path(@shopping_list, recipe), method: :delete, data: { confirm: "Are you sure?"} %>
              <ul>
                <% recipe.measurements.each do |measurement| %>

                  <% if @shopping_list.measurements.include?(measurement) %>

                    <li>
                      <%= measurement.ingredient.name %> |
                      <%= measurement.value %>
                      <%= measurement.ingredient.unit %> |
                      <%= measurement.ingredient.price %> €

                      <%= link_to "remove", measurement_shopping_list_path(measurement.measurement_for(@shopping_list)), method: :delete, data: {confirm: "Are you sure?"} %>
                    </li>

                  <% end %>
                <% end %>
              </ul>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>


