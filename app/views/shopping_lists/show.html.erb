<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="sl-ingredients-list">
        <h2> Your shopping list </h2>
        <ul>
          <% @shopping_list.total_quantities(@ingredients).each do |hash|%>
            <% hash.each do |k, v| %>
              <li>
                <%= k %>
                <%= v %>
              </li>

            <% end %>
          <% end %>
        </ul>

        <%= @shopping_list.full_price %> â‚¬
      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <h2> The recipes </h2>
      <ul>
      <% @shopping_list.recipes.each do |recipe| %>
      <li>
        <%= recipe.name %>
        <%= link_to "remove all", "" %>
        <ul>
        <% recipe.measurements.each do |measurement| %>

          <% if @shopping_list.measurements.include?(measurement) %>

            <li>
              <%= MeasurementShoppingList.all %>
              <%= measurement.id %>
              <%= measurement.ingredient.name %>
              <%= measurement.value %>
              <%= measurement.unit %>
              <%= "price" %>
              <%= link_to "remove", measurement_shopping_list_path(measurement.measurement_for(@shopping_list)), method: :delete, data: {confirm: "Are you sure?"} %>
            </li>
          <% end %>
        <% end %>
        </ul>
      </li>
      <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6">


    </div>
  </div>

</div>


